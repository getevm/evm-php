#!/usr/bin/env php
<?php

if (file_exists(__DIR__ . '/../../../autoload.php')) {
    require __DIR__ . '/../../../autoload.php';
} else {
    require __DIR__ . '/../vendor/autoload.php';
}

use Getevm\Evm\Commands\PhpCommand;
use Getevm\Evm\Services\Http\CurlDownloader;
use Symfony\Component\Console\Application;

/**
 * - evm php install 7.4.0
 * - evm php use 7.4.0
 * - evm php remove 7.4.0
 */

$downloader = new CurlDownloader();

$downloader->downloadZip('https://ipv4.download.thinkbroadband.com/1GB.zip', function ($resource, $download_size, $downloaded, $upload_size, $uploaded) {
    echo json_encode([
            $resource,
            $download_size,
            $downloaded,
            $upload_size,
            $uploaded
        ]) . PHP_EOL;
}, function () {

});

$application = new Application('Environment Version Manager', '1.0.0');
$application->add(new PhpCommand);
$application->run();
